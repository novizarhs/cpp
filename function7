//function7_ubah_argumen

#include <iostream>

using namespace std;

void tukar (int a, int b); //prototipe fungsi
void tukar_1 (int &a, int &b); //perubahan disini dan pd definisi fungsi
int main ()
{
    int a, b;
    a = 55;
    b = 77;

    cout<< "main () : a =" <<a<<endl;
    cout<< "main () : b =" <<b<<endl;
    tukar(a,b);

    cout << "main () : a =" <<a<<endl;
    cout << "main () : b =" <<b<<endl;
    cout<<endl;
    tukar_1(a,b);

    cout << "main () : a =" <<a<<endl;
    cout << "main () : b =" <<b<<endl;
}
//definisi fungsi untuk menukarkan nilai

void tukar (int a, int b)
{
    int tmp;
    tmp = a;
    a = b;
    b = tmp;
    cout<<"tukar() : a ="<<a<<endl;
    cout<<"tukar() : b ="<<b<<endl;
}
//definisi fungsi untuk menukarkan nilai

void tukar_1 (int &a, int &b) //bagian ini juga diubah
{
    int tmp;
    tmp = a;
    a = b;
    b = tmp;
    cout<<"tukar() : a ="<<a<<endl;
    cout<<"tukar() : b ="<<b<<endl;
}
